{
    "name": "system-monitoring-dashboard",
    "version": "1.0.0",
    "description": "Windows System Monitoring Dashboard",
    "main": "main.js",
    "scripts": {
        "start": "node cli-monitor.js",
        "start:gui": "electron .",
        "start:cli": "node cli-monitor.js",
        "build": "electron-builder build --win",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "lint": "eslint ."
    },
    "build": {
        "appId": "com.system.monitor",
        "productName": "System Monitor",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "runAfterFinish": true,
            "packElevateHelper": true,
            "installerIcon": "assets/icon.ico",
            "uninstallerIcon": "assets/icon.ico",
            "license": "LICENSE",
            "allowElevation": true
        },
        "asar": true,
        "asarUnpack": [
            "node_modules/systeminformation"
        ]
    },
    "dependencies": {
        "asciichart": "^1.5.25",
        "chalk": "^4.1.2",
        "chart.js": "^4.4.8",
        "heatmap.js": "^2.0.5",
        "systeminformation": "^5.18.15"
    },
    "devDependencies": {
        "electron": "^24.3.0",
        "electron-builder": "^24.13.3"
    },
    "author": "",
    "license": "MIT"
}
